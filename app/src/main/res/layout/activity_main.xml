<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/textBAL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_gravity="left"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnADDTRANS"
        android:layout_width="wrap_content"
        android:layout_toRightOf = "@+id/textBAL"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/add_transaction"
        android:layout_toEndOf="@+id/textBAL" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_gravity="bottom"
        android:textSize="30sp"
        android:background="@color/green"
        android:id="@+id/btnPlus"/>


    <com.example.velmurugan.draganddroplistviewandroid.TouchListView
        android:id="@+id/touch_listview"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tlv="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:drawSelectorOnTop="false"
        tlv:normal_height="64dp"
        tlv:expanded_height="128dp"
        tlv:grabber="@+id/icon"
        tlv:remove_mode="slideRight" />
</LinearLayout>
