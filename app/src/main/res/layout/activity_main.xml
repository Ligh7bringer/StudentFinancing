<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/textBAL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnADDTRANS"
        android:layout_width="wrap_content"
        android:layout_toRightOf = "@+id/textBAL"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/red"
        android:text="@string/add_transaction"
        android:layout_toEndOf="@+id/textBAL"
        android:textSize="20sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add category"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:background="@color/green"
        android:id="@+id/btnPlus"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Can afford: "
        android:textSize="30sp"
        android:textColor="@color/green" />


    <com.example.velmurugan.draganddroplistviewandroid.TouchListView
        android:id="@+id/touch_listview"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tlv="http://schemas.android.com/apk/res-auto"
        android:layout_height="300dp"
        android:layout_width="match_parent"
        android:drawSelectorOnTop="false"
        tlv:normal_height="64dp"
        tlv:expanded_height="128dp"
        tlv:grabber="@+id/icon"
        tlv:remove_mode="slideRight" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Can't afford: "
        android:textColor="@color/red"
        android:textSize="25sp"/>

    <com.example.velmurugan.draganddroplistviewandroid.TouchListView
        android:id="@+id/touch_listview_bad"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tlv="http://schemas.android.com/apk/res-auto"
        android:layout_height="300dp"
        android:layout_width="match_parent"
        android:drawSelectorOnTop="false"
        tlv:normal_height="64dp"
        tlv:expanded_height="128dp"
        tlv:grabber="@+id/icon"
        tlv:remove_mode="slideRight" />

 </LinearLayout>
